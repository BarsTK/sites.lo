@import "reset.less";

@color_base: #9a9a9a;
@color_green_base: #1d9d73;
@color_green_light_base: #1fa87a;
@color_green_dark_base: #1b936c;
@color_back_grey: #f1f1f1;
@color_dark_grey: #5b5b5b;

@offset: 30px;
@offsetOneSide: @offset / 2;

.sizeHList(@cnt, @offs) {
    width: ~"calc(100% / @{cnt} - @{offs})";
}

.hListItem(@cnt, @offs, @color) {
    display: inline-block;
    margin: 20px @offs / 2;
    .sizeHList(@cnt, @offs);
    font-size: 12px;
    vertical-align: top;
    color: @color;
}

.hListItemColor(@cnt, @offs, @color) {
    .hListItem(@cnt, @offs, @color);
    text-align: center;
    padding: 5%;
    box-sizing: border-box;
    cursor: pointer;
}

.circleBack(@whSize, @bcolor) {
    background-color: @bcolor;
    border-radius: 50%;
    width: @whSize;
    height: @whSize;
    margin: 0 auto;
}

.price(@color) {
    background-color: @color;
    color: white;
    font-size: 2em;
    padding: 10px 0;
}

body {
    margin: 0;
    color: @color_base;
    font-family: 'Ubuntu', sans-serif;
    font-size: 12px;
    line-height: 1.6em;
    font-weight: 100;
    min-width: 240px;
}

a {
    text-decoration: none;
    color: inherit;
}
img {
  max-width: 100%;
}
h1, .h1 {
    font-size: 3em;
    line-height: initial;
    margin: 0.67em 0;
}


h2, .h2 {
    font-size: 2em;
    line-height: initial;
    margin: 0.83em 0;
    color: black;
}

h3, .h3 {
    font-size: 1.5em;
    line-height: initial;
    margin: 1em 0;
}

h4, .h4 {
    margin: 1.33em 0;
    line-height: initial;
}

.sliderTopContent .h1 span {
    font-size: 1.25em;

}

.hListPict p {
  margin-bottom: @offset;
}

.header, .sliderTop, .hListPict, .hListPict2, .hList, 
.discover, .hListWeb, .sliderBottom, .packagesPrice, .sliderStuff {
  overflow: hidden;
}

.wrapper {
    margin: @offset auto;
}

.wrapperOut {
    max-width: 2048px;
}

.wrapperIn {
    max-width: 1024px;
    margin: @offset auto;
  padding: 0 @offsetOneSide;
}

.clearfix::after {
    content: "";
    display: block;
    clear: both;
}

.list {
    list-style: none;
    padding-left: 0;
    font-size: 14px;
}

.fa-search {
    color: @color_green_base;
}

.headerRight {
    float: right;
}

.menuMain {
    display: inline-block;
    margin: 6px 0;
}

.menuMain li:hover a {
    color: @color_green_base;
}

.logo, .menuMain li {
    display: inline-block;
}

.menuMain li {
    margin-right: 20px;
}

.searchBox {
    display: inline-block;
    position: relative;
}
.fa-search {
    cursor: pointer;
}
.searchInputTxt {
    position: absolute;
    top: 130%;
    right: 0;
    border-radius: 9px;
    display: none;
    padding: 0 5px;
}

#checkSearch {
    display: none;
}

#checkSearch:checked + .searchInputTxt {
    display: block;
}

.menuVColor {
    margin: @offset 0;
}

.menuVColor img {
    margin: 12px 0;
}

.menuVColor a {
    padding-left: 25px;
}

/*.menuVColor .listItem {
    display: inline-block;
}*/

.sliderBackgr {
    background-size: auto 100%;
    background-position: center;
    background-repeat: no-repeat;
}

.sliderTop {
    background-image: url("../img/slider-top1.png");
    color: white;
}

.sliderBottom .hListItems {
    padding: 15% 0;
}

.sliderBottom {
    background-image: url("../img/slider-bottom1.png");
    color: @color_green_base;
}

.sliderTopContent {
    text-align: center;
    padding: 15% 0;
}

.buttons {
  margin: 20px 0;
}

.btn {
    display: inline-block;
    border: 1px solid white;
    border-radius: 20px;
    padding: 10px 20px;
    min-width: 110px;
    margin: 0 10px;
    font-size: 14px;
}

.btn:hover {
    background-color: @color_green_base;
    border-color: @color_green_base;
}

.btnColor {
  color: white;
  background-color: @color_green_base;
  border-color: @color_green_base;
}

.btnColor:hover {
  color: @color_green_base;
  background-color: white;
}

.hListPict, .hListPict2, .packagesPrice, .sliderStuff, footer {
    text-align: center;
}

.hList, .sliderStuff, .menuVColor li:hover {
    background-color: @color_back_grey;
}

.hListItems {
    font-size: 0;
    margin: 0 -@offsetOneSide;
}

.hListItem {
    .hListItem(3, @offset, inherit);
}

.hListItemTransp {
    .hListItem(4, @offset, inherit);
    text-align: center;
    font-size: 16px;
}

.hListItemsColor {
    font-size: 0;
    ///margin: 0 -@offsetOneSide;
}

.hListItemColor1 {
    .hListItemColor(3, 0px, #fff);
    background-color: @color_green_light_base; 
}

.hListItemColor2 {
    .hListItemColor(3, 0px, #fff);
    background-color: @color_green_base;
}

.hListItemColor3 {
    .hListItemColor(3, 0px, #fff);
    background-color: @color_green_dark_base;
}

.hListPict .h3 {
  color: @color_green_base;
}

.hListPict2 .h3, .hList .h3, .sliderStuff .h3 {
  color: @color_dark_grey;
}

.hListItem:hover .itemImg {
  transform: scaleX(0.95) scaleY(0.92);
}

.pictFloat {
    float: left;
  width: 45%;
  max-width: 100%;
}

.pictFloatItem {
    width: 25%;
    text-align: center;
}

.itemFloat {
    overflow: hidden;
    padding-left: 10%;
}

.hListItemContent {
    overflow: hidden;
    padding-left: 10px;
}

.itemImgBack {
    background-color: @color_green_base;
}

.itemImg {
/*width: 100%;*/
    display: block;
    transition: transform 1s;
}
.itemLinks {
  margin: 8px 0;
}

.itemLink {
    color: @color_green_base;
    font-size: 13px;
}

.itemLinkGroup {
    display: inline-block;
    margin: 0 10px;
}

 .fa {
    //color: @color_green_base;
    margin: 0 5px;
 }

.circleBack1 {
    .circleBack(50px, @color_back_grey);
    text-align: center;
    display: inline-block;
    vertical-align: middle;
    margin-bottom: 10px;
}

.circleBack2 {
    .circleBack(115px, @color_green_base);
}

.circleBack2 img {
    margin: 30% auto;
}

.price1 {
    .price(@color_green_light_base);
}

.price2 {
    .price(@color_green_base);
}

.price3 {
    .price(@color_green_dark_base);
}

.priceNumber {
    padding: 0 3px;
}

.priceNumber:before {
    content: "$";
    font-size: .55em;
    vertical-align: text-top;
}

.priceNumber:after {
    content: "/month";
    font-size: .35em;
    //vertical-align: bottom;
}

.hListItemPrice {
    .hListItem(3, @offset, inherit);
}

.listProp {
    text-align: left;
    width: 60%;
    margin: 20px auto;
}

.listProp li {
    line-height: 2.3em;
}

.listProp .fa-check {
    color: @color_green_base;
}

.listProp .fa-close {
    color: @color_base;
}

.itemPriceText {
    padding-left: 10px;
}

footer div {
    margin: 20px auto;
}

.stuffName {
    margin-bottom: 5px;
}

.workPosition {
    color: @color_green_base;
    font-size: 1.2em;
}

.phone {
    vertical-align: middle;
}

.phoneImg {
    margin-right: 10px;
}
.phoneNumber, .phoneImg {
    font-size: 2em;
    display: inline-block;
    vertical-align: middle;
}

.netSocLinks {
    font-size: initial;
    color: @color_base;
}

.netSocLinks .fa:hover {
    color: @color_green_base;
}

footer .logoIcon {
    width: 25px;
    display: inline-block;
    vertical-align: middle;
}

