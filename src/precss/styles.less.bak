@media screen and (max-width: 600px) {
    .hListItems {
        margin: 0;
    }
    .hListItem {
        display: block;
        width: 100%;
        margin: 20px 0;
    }
    .itemImgBack {
        margin: 0 17%;
    }
    .hListItemColor1 {
        display: block;
        width: 100%;
        margin: 0;
    }
    .hListItemColor2 {
        display: block;
        width: 100%;
        margin: 0;
    }
    .hListItemColor3 {
        display: block;
        width: 100%;
        margin: 0;
    }
    .hListItemTransp {
        .sizeHList(2, @offset);
    }
}

@media screen and (max-width: 400px) {
    .hListItemTransp {
        display: block;
        width: 100%;
        margin: 20px 0;
    }
        .sliderBottom .hListItems {
        padding: 10% 0;
    }
}
